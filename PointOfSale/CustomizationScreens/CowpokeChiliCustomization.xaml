<UserControl x:Class="PointOfSale.CustomizationScreens.CowpokeChiliCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="CowpokeChiliCustomizationLabel" Content="COWPOKE CHILI"/>

        <CheckBox x:Name="CheeseCheckbox" Grid.Row="1"
                  IsChecked="{Binding Path=Cheese}" Content="INCLUDE CHEESE"/>
        <CheckBox x:Name="SourCreamCheckbox" Grid.Row="2"
                  IsChecked="{Binding Path=SourCream}" Content="INCLUDE SOUR CREAM"/>
        <CheckBox x:Name="GreenOnionCheckbox" Grid.Row="3"
                  IsChecked="{Binding Path=GreenOnion}" Content="INCLUDE GREEN ONION"/>
        <CheckBox x:Name="TortillaStripsCheckbox" Grid.Row="4"
                  IsChecked="{Binding Path=TortillaStrips}" Content="INCLUDE TORTILLA STRIPS"/>

    </Grid>
</UserControl>
