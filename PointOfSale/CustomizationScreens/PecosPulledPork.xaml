<UserControl x:Class="PointOfSale.CustomizationScreens.PecosPulledPork"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="PecosPulledPorkCustomizationLabel" Content="PECOS PULLED PORK"/>

        <CheckBox x:Name="BreadCheckbox" Grid.Row="1"
                  IsChecked="{Binding Path=Bread}" Content="INCLUDE BREAD"/>
        <CheckBox x:Name="PickleCheckbox" Grid.Row="2"
                  IsChecked="{Binding Path=Pickle}" Content="INCLUDE PICKLE"/>

    </Grid>
</UserControl>
