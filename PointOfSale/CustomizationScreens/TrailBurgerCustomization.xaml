<UserControl x:Class="PointOfSale.CustomizationScreens.TrailBurgerCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        
        <Label x:Name="TrailBurgerCustomizationLabel" Content="TRAIL BURGER"/>


        <CheckBox x:Name="BunCheckbox" Grid.Row="1"                
                  IsChecked="{Binding Path=Bun}" Content="INCLUDE BUN"/>
        <CheckBox x:Name="CheeseCheckbox" Grid.Row="2"                 
                  IsChecked="{Binding Path=Cheese}" Content="INCLUDE CHEESE"/>
        <CheckBox x:Name="PickleCheckbox" Grid.Row="3"                 
                  IsChecked="{Binding Path=Pickle}" Content="INCLUDE PICKLE"/>
        <CheckBox x:Name="KetchupCheckbox" Grid.Row="4"                 
                  IsChecked="{Binding Path=Ketchup}" Content="INCLUDE KETCHUP"/>
        <CheckBox x:Name="MustardCheckbox" Grid.Row="5"                 
                  IsChecked="{Binding Path=Mustard}" Content="INCLUDE MUSTARD"/>

        
    </Grid>
</UserControl>
