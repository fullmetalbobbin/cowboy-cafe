<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Button Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="12">Item Selection</Button>
        <Button Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="12">Cancel Order</Button>
        <Button Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="12">Complete Order</Button>

        <local:OrderSummaryControl Grid.Column="1"></local:OrderSummaryControl>
        <local:OrderControl Margin="10"></local:OrderControl>
    </Grid>
</Window>
