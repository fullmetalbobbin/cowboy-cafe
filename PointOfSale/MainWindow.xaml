<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
           <!--<ColumnDefinition Width="1*"/>-->
        </Grid.ColumnDefinitions>
        <Button Name="ItemSelectionButton" Width="150" Height="30" VerticalAlignment="Top"  HorizontalAlignment="Left" Margin="60,15,0,0" Click="ItemSelectionButton_Click">Item Selection</Button>
        <Button Name="CancelOrderButton" Width="150" Height="30" VerticalAlignment="Top"  HorizontalAlignment="Center" Margin="0,15,235,0" Click="CancelOrderButton_Click">Cancel Order</Button>
        <Button Name="CompleteOrderButton" Width="150" Height="30" VerticalAlignment="Top"  HorizontalAlignment="Right" Margin="0,15,300,0" Click="CompleteOrderButton_Click">Complete Order</Button>

        <local:OrderControl Margin="0,40,0,0"></local:OrderControl>
    </Grid>
</Window>
